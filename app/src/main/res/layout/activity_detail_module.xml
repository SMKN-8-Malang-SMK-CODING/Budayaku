<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.DetailModuleActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">

        <ProgressBar
            android:id="@+id/loading_detailModul"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:elevation="10dp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/bg_detailModul"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_modulTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bg_detailModul" />

        <TextView
            android:id="@+id/tv_modulDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_modulTitle" />

        <Button
            android:id="@+id/btn_senjata"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rounded_border"
            android:fontFamily="@font/open_sans_semibold"
            android:gravity="start|center_vertical"
            android:paddingStart="42dp"
            android:text="Senjata Adat"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_modulDetail" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:elevation="2dp"
            android:src="@drawable/ic_navigate_next_accent_36dp"
            app:layout_constraintBottom_toBottomOf="@+id/btn_senjata"
            app:layout_constraintStart_toStartOf="@+id/btn_senjata"
            app:layout_constraintTop_toTopOf="@+id/btn_senjata" />

        <Button
            android:id="@+id/btn_rumah"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingStart="42dp"
            android:background="@drawable/rounded_border"
            android:fontFamily="@font/open_sans_semibold"
            android:gravity="start|center_vertical"
            android:text="Rumah Adat"
            app:layout_constraintEnd_toEndOf="@+id/btn_senjata"
            app:layout_constraintStart_toStartOf="@+id/btn_senjata"
            app:layout_constraintTop_toBottomOf="@+id/btn_senjata" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:elevation="2dp"
            android:src="@drawable/ic_navigate_next_accent_36dp"
            app:layout_constraintBottom_toBottomOf="@+id/btn_rumah"
            app:layout_constraintStart_toStartOf="@+id/btn_rumah"
            app:layout_constraintTop_toTopOf="@+id/btn_rumah" />

        <Button
            android:id="@+id/btn_tarian"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingStart="42dp"
            android:background="@drawable/rounded_border"
            android:fontFamily="@font/open_sans_semibold"
            android:gravity="start|center_vertical"
            android:text="Tarian Adat"
            app:layout_constraintEnd_toEndOf="@+id/btn_rumah"
            app:layout_constraintStart_toStartOf="@+id/btn_rumah"
            app:layout_constraintTop_toBottomOf="@+id/btn_rumah" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:elevation="2dp"
            android:src="@drawable/ic_navigate_next_accent_36dp"
            app:layout_constraintBottom_toBottomOf="@+id/btn_tarian"
            app:layout_constraintStart_toStartOf="@+id/btn_tarian"
            app:layout_constraintTop_toTopOf="@+id/btn_tarian" />

        <Button
            android:id="@+id/btn_pakaian"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:paddingStart="42dp"
            android:background="@drawable/rounded_border"
            android:fontFamily="@font/open_sans_semibold"
            android:gravity="start|center_vertical"
            android:text="Pakaian Adat"
            app:layout_constraintEnd_toEndOf="@+id/btn_tarian"
            app:layout_constraintStart_toStartOf="@+id/btn_tarian"
            app:layout_constraintTop_toBottomOf="@+id/btn_tarian" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:elevation="2dp"
            android:src="@drawable/ic_navigate_next_accent_36dp"
            app:layout_constraintBottom_toBottomOf="@+id/btn_pakaian"
            app:layout_constraintStart_toStartOf="@+id/btn_pakaian"
            app:layout_constraintTop_toTopOf="@+id/btn_pakaian" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/ic_navigate_before_grey_36dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>